<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/advanced_node_status"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/app_background"
    android:stretchColumns="1" >

    <TableRow
        android:id="@+id/table_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  >

        <TextView
            android:id="@+id/status_title"
            android:text="@string/status_title_advanced"
            android:layout_span="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_marginTop="8dp"
            android:textAlignment="textStart"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="32dp"
            android:textSize="@dimen/abc_text_size_title_material"
            android:layout_marginBottom="8dp" />

    </TableRow>

     <TableRow
        android:id="@+id/version_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/status_version"
            android:text="@string/version"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical|left"
            android:layout_marginRight="2dp"
            android:textAlignment="textStart"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="32dp"
            android:textColor="@color/black"
            android:textSize="@dimen/abc_text_size_subhead_material" />

        <TextView
            android:id="@+id/status_version_value"
            android:text="@string/placeholder_lorem_ipsum_short"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical|left"
            android:textAlignment="textStart"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="0dp"
            android:textSize="@dimen/abc_text_size_subhead_material" />
    </TableRow>
    
    <TableRow
        android:id="@+id/uptime_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/status_uptime"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical|left"
            android:layout_marginRight="2dp"
            android:textAlignment="textStart"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="32dp"
            android:text="@string/uptime"
            android:textColor="@color/black"
            android:textSize="@dimen/abc_text_size_subhead_material" />

        <TextView
            android:id="@+id/status_uptime_value"
            android:text="@string/placeholder_lorem_ipsum_short"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical|left"
            android:textAlignment="textStart"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="0dp"
            android:textSize="@dimen/abc_text_size_subhead_material" />
    </TableRow>
    
    <TableRow
        android:id="@+id/input_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/status_input"
            android:text="@string/recentInputRate"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical|left"
            android:layout_marginRight="2dp"
            android:textAlignment="textStart"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="32dp"
            android:textColor="@color/black"
            android:textSize="@dimen/abc_text_size_subhead_material" />

        <TextView
            android:id="@+id/status_input_value"
            android:text="@string/placeholder_lorem_ipsum_short"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical|left"
            android:textAlignment="textStart"
            android:gravity="center_vertical|left"
            android:textSize="@dimen/abc_text_size_subhead_material" />
    </TableRow>
    
    <TableRow
        android:id="@+id/ouput_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/status_output"
            android:text="@string/recentOutputRate"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical|left"
            android:layout_marginRight="2dp"
            android:textAlignment="textStart"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="32dp"
            android:textColor="@color/black"
            android:textSize="@dimen/abc_text_size_subhead_material" />

        <TextView
            android:id="@+id/status_output_value"
            android:text="@string/placeholder_lorem_ipsum_short"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical|left"
            android:textAlignment="textStart"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="0dp"
            android:textSize="@dimen/abc_text_size_subhead_material" />
    </TableRow>

    
    
</TableLayout>