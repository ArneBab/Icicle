<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingTop="8dp"
    android:paddingRight="24dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/node_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/node_name_label" />

    <EditText
        android:id="@+id/node_name_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/node_name_hint"
        android:inputType="textCapWords" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/node_address_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/node_address_label" />

    <EditText
        android:id="@+id/node_address_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/node_address_hint"
        android:inputType="textUri" />

    <TextView
        android:id="@+id/node_port_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/node_port_label" />

    <EditText
        android:id="@+id/node_port_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/node_port_hint"
        android:inputType="number" />

</LinearLayout>
