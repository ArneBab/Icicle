<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingTop="8dp"
    android:paddingRight="24dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/node_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/node_name_label" />

    <EditText
        android:id="@+id/node_name_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textCapWords" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/node_trust_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/trust" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trust_spinner" />

    <TextView
        android:id="@+id/node_visibility_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/visibility" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/visibility_spinner" />


</LinearLayout>
