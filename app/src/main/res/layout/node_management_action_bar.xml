<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/node_management_action_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="@string/node_add"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/node_add"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:background="@drawable/ripple_effect"
        android:contentDescription="@string/node_add"
        android:src="@drawable/ic_add_black_36dp"
        android:paddingBottom="8dp"
    	android:paddingTop="8dp"  />
    
    <ImageButton
        android:id="@+id/node_accept"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:background="@drawable/ripple_effect"
        android:contentDescription="@string/node_accept"
        android:src="@drawable/ic_done_black_36dp"
        android:visibility="invisible"
        android:paddingBottom="8dp"
    	android:paddingTop="8dp"  />

    <ImageButton
        android:id="@+id/node_edit"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:background="@drawable/ripple_effect"
        android:contentDescription="@string/node_edit"
        android:src="@drawable/ic_edit_black_36dp"
        android:visibility="invisible"
        android:paddingBottom="8dp"
    	android:paddingTop="8dp" />

    <ImageButton
        android:id="@+id/node_share"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:background="@drawable/ripple_effect"
        android:contentDescription="@string/node_share"
        android:src="@drawable/ic_share_black_36dp"
        android:visibility="invisible"
        android:paddingBottom="8dp"
    	android:paddingTop="8dp" />

    <ImageButton
        android:id="@+id/node_discard"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:background="@drawable/ripple_effect"
        android:contentDescription="@string/node_discard"
        android:src="@drawable/ic_delete_black_36dp"
        android:visibility="invisible"
        android:paddingBottom="8dp"
    	android:paddingTop="8dp" />

</LinearLayout>